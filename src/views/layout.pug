doctype html
html(lang='en')
  head
    title= title
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    link(rel='stylesheet', href='/stylesheets/style.css')
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  body
    div(class='container')

      nav(class='navbar navbar-expand-lg bg-light navbar-light')
        div(class='navbar-nav mr-auto')
          a(href='/conf', class={'nav-item':true, 'nav-link':true, active: navconf}) Conferences
          a(href='/date', class={'nav-item':true, 'nav-link':true, active: navdate}) Dates
        if user
          span(class='nav-item navbar-text') Hi #{user.user}!
          a(href='/auth/logout', class={'nav-item':true, 'nav-link':true}) Logout
        else
          a(href='/auth/google', class={'nav-item':true, 'nav-link':true}) GoogleAuth
      hr

      block content

