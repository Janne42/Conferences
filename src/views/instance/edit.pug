extends ../layout

block content
    h1 #{conf.name}

    p
        form(method='post', action='/instance/?_method=PUT')
            input(type='hidden', name='id', value=instance.id)
            div
                label(for='year') Year:
                input#year(type='number', min="2000", max="2020", name='year', value=instance.year)
            div
                label(for='url') URL:
                input#url(type='url', name='url', value=instance.url)
            div
                div(class='button')
                    button(type='submit') Update

    p CFP Tracks
        ul
            li
                form(method='POST', action='/track')
                    input(type='hidden', name='instance_id', value=instance.id)
                    div
                        label(for='name') Name:
                        input#name(type='text', name='name')
                    button(type='submit') New
            each val in tracks
                li
                    a(href='/track/' + val.id)
                        | #{val.name}
