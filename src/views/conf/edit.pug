extends ../layout

block content
    h1=title

    p
        form(method='post', action='/conf/?_method=PUT')
            input(type='hidden', name='id', value=conf.id)
            p
                label(for='name') Name
                input#name(type='text', name='name', value=conf.name)
            p
                label(for='acronym') Acronym
                input#acronym(type='text', name='acronym', value=conf.acronym)
            p
                label(for='url') URL
                input#url(type='url', name='url', value=conf.url)
            p
                label(for='format') Submission format
                input#format(type='text', name='format', value=conf.format)
            p
                label(for='acceptance_rate') Acceptance rate
                input#acceptance_rate(type='number', name='acceptance_rate', value=conf.acceptance_rate)
            p
                div(class='button')
                    button(type='submit') Update
