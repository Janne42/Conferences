extends ../layout

block content
    h1 CFP Track for&nbsp;
        a(href='/conf/' + conf.id)
            | #{conf.name}
        | &nbsp;
        a(href='/instance/' + instance.id)
            | #{instance.year}


    p
        form(method='post', action='/track/?_method=PUT')
            input(type='hidden', name='id', value=track.id)
            div
                label(for='name') Name:
                input#name(type='text', name='name', value=track.name)
            div
                label(for='url') URL:
                input#url(type='url', name='url', value=track.url)
            div
                label(for='page_limit') Page limit:
                input#page_limit(type='number', name='page_limit', min='2', value=track.page_limit)
            div
                input#increfs(type='checkbox', name='including_references',
                    checked=track.including_references)
                label(for='increfs',) ... including references?
            div
                input#double_blind(type='checkbox', name='double_blind',
                    checked=track.double_blind)
                label(for='double_blind',) Double blind?
            div
                div(class='button')
                    button(type='submit') Update

    p Dates
