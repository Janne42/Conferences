doctype html
html(lang='en')
  head
    title= title
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    link(rel='stylesheet', href='/stylesheets/style.css')
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  body
    div(class='container')

      nav(class='navbar navbar-expand-lg bg-light navbar-light')
        div#navbarNavDropdown(class="collapse navbar-collapse")
          div(class='navbar-nav mr-auto')
            a(href='/', class={'nav-item': true, 'nav-link': true, active: (navsection === 'about')}) About
            a(href='/conf', class={'nav-item':true, 'nav-link':true, active: (navsection === 'confs')}) Conferences
            if user
              a(href='/date', class={'nav-item':true, 'nav-link':true, active: (navsection === 'dates')}) By date
              a(href='/region', class={'nav-item': true, 'nav-link': true, active: (navsection === 'regions')}) By region
          if user
            div(class='navbar-nav')
              if user.is_admin
                a(href='/user/list', class={'nav-item': true, 'nav-link': true, active: (navsection === 'users')}) Users
              a(href='/user', class={'nav-item': true, 'navbar-text': true, 'nav-link': true, active: (navsection === 'profile')}) #{user.given_name} #{user.family_name}
              a(href='/auth/logout', class='nav-item nav-link') Logout
          else
            div(class='nav-item dropdown')
              a#authDropdown(href='#' role='button' class='nav-item nav-link dropdown-toggle' data-toggle='dropdown' aria-haspopup="true" aria-expanded="false") Login
              div(class='dropdown-menu' aria-labelledby='authDropdown')
                a(href='/auth/google', class='dropdown-item')
                  img(src='/images/btn_google_signin_light_normal_web.png')
                // span(class='dropdown-item') Twitter
                // span(class='dropdown-item') Mastodon

      block content

    <script src="/javascripts/jquery.slim.min.js"></script>
    <script src="/javascripts/popper.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
